{
  "name": "micro-learning-portal",
  "version": "1.0.0",
  "description": "Micro-learning platform with modular architecture",
  "type": "module",
  "scripts": {
    "dev": "npx http-server docs -p 8080 -o",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run",
    "build": "echo 'Build step - minification handled by deployment' && npm run test:ci",
    "lint": "eslint \"docs/js/**/*.js\" --max-warnings=0",
    "lint:fix": "eslint --fix \"docs/js/**/*.js\"",
    "audit": "npm audit --audit-level=moderate"
  },
  "keywords": ["micro-learning", "education", "spa"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.50.0",
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "happy-dom": "^12.10.3"
  }
}
